{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["@solidjs/start/env"]
  },
  "include": ["src", "server.ts", "src/middleware/index.tsx"],
  "exclude": ["node_modules"]
}
